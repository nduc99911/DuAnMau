<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
<LinearLayout

    android:layout_gravity="center"
    android:weightSum="2"
    android:layout_marginTop="50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgNguoiDung"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/emthree"></ImageView>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:text="Người Dùng"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="35dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgTheLoai"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/cateicon"></ImageView>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22px"
            android:text="Thể Loại"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>


</LinearLayout>
<!--    hang2-->
    <LinearLayout

        android:layout_gravity="center"
        android:weightSum="2"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgBook"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/bookicon"></ImageView>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:text="Sách"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgHoaDon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hdicon"></ImageView>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:text="Hóa Đơn"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>



    </LinearLayout>
<!--    hàng3-->
    <LinearLayout

        android:layout_gravity="center"
        android:weightSum="2"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgTop"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/money_icon"></ImageView>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:text="Sách Bán Chạy"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgThongKe"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/thongke"></ImageView>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22px"
                android:text="Thống Kê"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
